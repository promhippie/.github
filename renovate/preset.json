{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": [
        "Preset used by Promhippie"
    ],
    "extends": [
        "config:base",
        ":semanticCommits",
        ":semanticCommitType(deps)"
    ],
    "dockerfile": {
        "pinDigests": true
    },
    "gomod": {
        "postUpdateOptions": [
            "gomodUpdateImportPaths",
            "gomodTidy"
        ]
    },
    "packageRules": [
        {
            "description": "Semantic commits for dep updates",
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "semanticCommitType": "patch",
            "semanticCommitScope": "deps",
            "automerge": true
        },
        {
            "description": "Automerge docker digest updates",
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "pin",
                "pinDigest",
                "digest"
            ],
            "semanticCommitType": "patch",
            "semanticCommitScope": "deps",
            "pinDigests": true,
            "automerge": true
        },
        {
            "description": "Automerge untagged golang libs",
            "matchPackageNames": [
                "golang.org/x/crypto",
                "golang.org/x/net"
            ],
            "semanticCommitType": "deps",
            "semanticCommitScope": "patch",
            "automerge": true
        },
        {
            "description": "Build tool version upgrades",
            "groupName": "build tools",
            "matchManagers": [
                "github-actions"
            ],
            "semanticCommitType": "ci",
            "semanticCommitScope": "tools",
            "automerge": true
        }
    ],
    "labels": [
        "renovate"
    ],
    "ignoreDeps": [
        "github.com/prometheus/prometheus"
    ]
}
